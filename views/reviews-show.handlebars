<!--- Templete to view a review -->
<a href="/movies/{{review.movieId}}">Back to Movie</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{review.title}}</h1>
    <h2>{{review.movieTitle}}</h2>
    <p>{{review.description}}</p>
    <p> Rated : {{review.rating}}</p>

    <p><a href="/movies/{{review.movieId}}/reviews/{{review._id}}/edit">Edit</a></p>
    <p><form method="POST" action="/movies/{{review.movieId}}/reviews/{{review._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>

    <!-- Comment form -->
    {{> comment-form}}

    <hr>

    <!-- Show comments-->
    {{#each comments}}
      {{> comment }}
    {{/each}}

  </div>
</div>
