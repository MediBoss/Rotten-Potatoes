<h1>Now Playing</h1>
  {{#each movies}}
    <div class="movie poster">
      <a href="/movies/{{this.id}}" class="thumbnail">
      <img src="https://image.tmdb.org/t/p/w200{{this.poster_path}}"></a>
      <div class="caption">
        <span class="title"><h3>{{this.title}}</h3></span>
        <span class="genre"><h5>{{this.genre}}<h5></span>
      </div>
    </div>
  {{/each}}
