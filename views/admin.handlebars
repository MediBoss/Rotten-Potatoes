<h2>Reviews<h2>
<table class="table">
    <thead>
        <tr>
            {{!-- <th scope="col">_id</th> --}}
            <th scope="col">Title</th>
            <th scope="col">Review Description</th>
        </tr>
    </thead>
    <tbody>
        {{#each reviews}}
        <tr>
            {{!-- <th scope="row">{{this._id}}</th>  --}}
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <form method="POST" action="/movies/{{this.movieId}}/reviews/{{this._id}}?_method=DELETE"><td><button class="btn btn-primary" id="deleteReview" type="submit" movie-id="{{this.movieId}}" review-id="{{this._id}}">Delete</button></td></form>
        </tr>
      {{/each}}
    </tbody>
</table>